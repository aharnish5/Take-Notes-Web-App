<div class="container py-5">
  <!-- Dashboard Header -->
  <div class="row align-items-center mb-5">
    <div class="col-lg-8">
      <div class="d-flex align-items-center mb-3">
        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
          <i class="bi bi-person-circle text-primary fs-4"></i>
        </div>
        <div>
          <h1 class="h2 fw-bold text-primary-emphasis mb-1">Welcome back, <%= userName %>!</h1>
          <p class="text-muted mb-0">Here's what you've been working on</p>
        </div>
      </div>
    </div>
    <div class="col-lg-4 text-lg-end">
      <a href="/dashboard/add" class="btn btn-primary btn-lg fw-semibold px-4 py-3 rounded-3 shadow-sm">
        <i class="bi bi-plus-circle me-2"></i>New Note
      </a>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="row g-4 mb-5">
    <div class="col-lg-3 col-md-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-4">
          <div class="d-flex align-items-center">
            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
              <i class="bi bi-journal-text text-primary fs-4"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">Total Notes</h6>
              <h3 class="fw-bold mb-0"><%= notes.length %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-lg-3 col-md-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-4">
          <div class="d-flex align-items-center">
            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
              <i class="bi bi-clock text-success fs-4"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">Recent</h6>
              <h3 class="fw-bold mb-0">Today</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-lg-3 col-md-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-4">
          <div class="d-flex align-items-center">
            <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
              <i class="bi bi-star text-warning fs-4"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">Favorites</h6>
              <h3 class="fw-bold mb-0">0</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-lg-3 col-md-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-4">
          <div class="d-flex align-items-center">
            <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
              <i class="bi bi-search text-info fs-4"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">Search</h6>
              <h3 class="fw-bold mb-0">Ready</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Notes Grid -->
  <% if (notes.length > 0) { %>
    <div class="row g-4 mb-5">
      <% for(var i=0; i < notes.length; i++) { %>
        <div class="col-lg-4 col-md-6">
          <div class="card border-0 shadow-sm h-100 note-card">
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <h5 class="card-title fw-semibold text-primary-emphasis mb-0">
                  <%= notes[i].title %>
                </h5>
                <div class="dropdown">
                  <button class="btn btn-sm btn-outline-secondary border-0" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-three-dots-vertical"></i>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                    <li><a class="dropdown-item" href="/dashboard/item/<%= notes[i]._id %>">
                      <i class="bi bi-eye me-2"></i>View
                    </a></li>
                    <li><a class="dropdown-item" href="/dashboard/item/<%= notes[i]._id %>">
                      <i class="bi bi-pencil me-2"></i>Edit
                    </a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="/dashboard/item-delete/<%= notes[i]._id %>" 
                           onclick="return confirm('Are you sure you want to delete this note?')">
                      <i class="bi bi-trash me-2"></i>Delete
                    </a></li>
                  </ul>
                </div>
              </div>
              
              <p class="card-text text-muted mb-3">
                <%= notes[i].body %>
              </p>
              
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                  <i class="bi bi-clock me-1"></i>Updated recently
                </small>
                <a href="/dashboard/item/<%= notes[i]._id %>" class="btn btn-outline-primary btn-sm rounded-3">
                  <i class="bi bi-arrow-right me-1"></i>Read More
                </a>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Pagination -->
    <% if (pages > 1) { %>
      <nav aria-label="Notes pagination" class="d-flex justify-content-center">
        <ul class="pagination pagination-lg">
          <% if(current == 1) { %>
            <li class="page-item disabled">
              <span class="page-link border-0 text-muted">Previous</span>
            </li>
          <% } else { %>
            <li class="page-item">
              <a class="page-link border-0 text-primary" href="/dashboard">First</a>
            </li>
          <% } %>
          
          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1 ) { %>
            <li class="page-item disabled">
              <span class="page-link border-0 text-muted">...</span>
            </li>
          <% } %>
          
          <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if(i == current ) { %>
              <li class="page-item active">
                <span class="page-link bg-primary border-0"><%= i %></span>
              </li>
            <% } else { %>
              <li class="page-item">
                <a class="page-link border-0 text-primary" href="/dashboard/?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
            
            <% if(i == Number(current) + 4 && i < pages) { %>
              <li class="page-item disabled">
                <span class="page-link border-0 text-muted">...</span>
              </li>
            <% } %>
          <% } %>
          
          <% if (current == pages) { %>
            <li class="page-item disabled">
              <span class="page-link border-0 text-muted">Last</span>
            </li>
          <% } else { %>
            <li class="page-item">
              <a class="page-link border-0 text-primary" href="/dashboard/?page=<%= pages %>">Last</a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } %>

  <% } else { %>
    <!-- Empty State -->
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <div class="empty-state p-5">
          <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 120px; height: 120px;">
            <i class="bi bi-journal-plus display-4 text-muted"></i>
          </div>
          <h2 class="fw-bold text-primary-emphasis mb-3">Ready to get started?</h2>
          <p class="lead text-muted mb-4">
            Create your first note and start organizing your thoughts. 
            It's quick, easy, and completely free!
          </p>
          <a href="/dashboard/add" class="btn btn-primary btn-lg fw-semibold px-5 py-3 rounded-3 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Create Your First Note
          </a>
        </div>
      </div>
    </div>
  <% } %>
</div>