<div class="container-fluid py-5">
  <div class="row justify-content-center align-items-center min-vh-75">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <!-- Register Card -->
      <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-5">
          <!-- Header -->
          <div class="text-center mb-4">
            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
              <i class="bi bi-person-plus text-success fs-2"></i>
            </div>
            <h3 class="fw-bold text-primary-emphasis">Create Account</h3>
            <p class="text-muted mb-0">Join Notes and start organizing your thoughts</p>
          </div>

          <!-- Register Form -->
          <form action="/register" method="POST" class="needs-validation" novalidate>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="username" class="form-label fw-medium">Username</label>
                <div class="input-group">
                  <span class="input-group-text bg-transparent border-end-0">
                    <i class="bi bi-person text-muted"></i>
                  </span>
                  <input type="text" class="form-control border-start-0 ps-0" id="username" name="username" placeholder="Choose a username" required>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <label for="email" class="form-label fw-medium">Email</label>
                <div class="input-group">
                  <span class="input-group-text bg-transparent border-end-0">
                    <i class="bi bi-envelope text-muted"></i>
                  </span>
                  <input type="email" class="form-control border-start-0 ps-0" id="email" name="email" placeholder="Enter your email" required>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <label for="displayName" class="form-label fw-medium">Display Name</label>
              <div class="input-group">
                <span class="input-group-text bg-transparent border-end-0">
                  <i class="bi bi-card-text text-muted"></i>
                </span>
                <input type="text" class="form-control border-start-0 ps-0" id="displayName" name="displayName" placeholder="Enter your display name" required>
              </div>
            </div>

            <div class="mb-4">
              <label for="password" class="form-label fw-medium">Password</label>
              <div class="input-group">
                <span class="input-group-text bg-transparent border-end-0">
                  <i class="bi bi-lock text-muted"></i>
                </span>
                <input type="password" class="form-control border-start-0 ps-0" id="password" name="password" placeholder="Create a strong password" required>
              </div>
              <div class="form-text">
                <i class="bi bi-info-circle me-1"></i>
                Password must be at least 8 characters long
              </div>
            </div>

            <div class="d-grid mb-4">
              <button type="submit" class="btn btn-success btn-lg fw-semibold py-3 rounded-3">
                <i class="bi bi-person-plus me-2"></i>Create Account
              </button>
            </div>
          </form>

          <!-- Divider -->
          <div class="text-center mb-4">
            <span class="text-muted">Already have an account?</span>
          </div>

          <!-- Login Link -->
          <div class="d-grid">
            <a href="/login" class="btn btn-outline-primary fw-medium py-3 rounded-3">
              <i class="bi bi-box-arrow-in-right me-2"></i>Sign In Instead
            </a>
          </div>
        </div>
      </div>

      <!-- Additional Info -->
      <div class="text-center mt-4">
        <p class="text-muted small mb-0">
          By creating an account, you agree to our 
          <a href="#" class="text-decoration-none">Terms of Service</a> and 
          <a href="#" class="text-decoration-none">Privacy Policy</a>
        </p>
      </div>
    </div>
  </div>
</div>
